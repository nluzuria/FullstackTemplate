{
  "name": "sapper-tailwindcs-boilerplate",
  "description": "Boilerplate for Sapper working with tailwindcss",
  "version": "0.0.1",
  "scripts": {
    "watch:tailwind": "postcss static/tailwind.css -o static/index.css -w",
    "build:tailwind": "NODE_ENV=production postcss static/tailwind.css -o static/index.css",
    "build:storybook": "build-storybook",
    "build-static:storybook": "build-storybook -c .storybook -o .out",
    "storybook": "start-storybook -p 9009 -s static",
    "dev": "sapper dev",
    "build": "npm run build:tailwind && sapper build",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "be:test": "jest src"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "apollo-server-express": "^2.12.0",
    "compression": "^1.7.1",
    "graphql": "^15.0.0",
    "graphql-tools": "^5.0.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.10",
    "pg": "^8.0.3",
    "polka": "next",
    "sirv": "^0.4.0",
    "svelte-apollo": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.9.0",
    "@babel/runtime": "^7.0.0",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.18",
    "@storybook/addon-notes": "^5.3.18",
    "@storybook/addon-storysource": "^5.3.18",
    "@storybook/addon-viewport": "^5.3.18",
    "@storybook/addons": "^5.3.18",
    "@storybook/svelte": "^5.3.18",
    "@storybook/theming": "^5.3.18",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/svelte": "^3.0.0",
    "apollo-boost": "^0.4.7",
    "babel-loader": "^8.1.0",
    "cypress": "^4.5.0",
    "jest": "^26.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "rollup": "^1.12.0",
    "rollup-plugin-babel": "^4.0.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-svelte": "^5.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "sapper": "^0.27.0",
    "svelte": "^3.0.0",
    "svelte-jester": "^1.0.5",
    "svelte-loader": "^2.13.6",
    "tailwindcss": "^1.1.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
